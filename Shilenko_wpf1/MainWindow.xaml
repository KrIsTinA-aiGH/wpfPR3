<Window x:Class="Shilenko_wpf1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shilenko_wpf1"
        mc:Ignorable="d"
        Title="Задачи" Height="432" Width="800" Icon="Resources/icon.ico">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBDF3FD"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" Background="#2A8348">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка Назад слева -->
            <Button x:Name="btnBack" HorizontalAlignment="Left" Margin="90,10,0,10" Content="Назад" Click="btnBack_Click"
                    Background="Transparent" Foreground="White" BorderBrush="White" Padding="10,5"/>

            <!-- Логотип слева -->
            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5" Source="Resources/logo.png"/>

            <!-- Заголовок варианта по центру -->
            <Label Content="Вариант №9" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   Background="#FFBDF3FD" Padding="10,5" FontWeight="Bold"/>
        </Grid>

        <!-- Основная область контента -->
        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock Text="Задачи" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"
                          Foreground="#2A8348"/>

                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Задача 1" Margin="10" Width="120" Height="40" x:Name="zad1" Click="Zad1_Click"
                           Background="#2A8348" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Задача 2" Margin="10" Width="120" Height="40" x:Name="zad2" Click="Zad2_Click"
                           Background="#2A8348" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Задача 3" Margin="10" Width="120" Height="40" x:Name="zad3" Click="Zad3_Click"
                           Background="#2A8348" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Задача 4" Margin="10" Width="120" Height="40" x:Name="zad4" Click="Zad4_Click"
                           Background="#2A8348" Foreground="White" FontWeight="Bold"/>
                    <Button Content="Задача 5" Margin="10" Width="120" Height="40" x:Name="zad5" Click="Zad5_Click"
                           Background="#2A8348" Foreground="White" FontWeight="Bold"/>
                </WrapPanel>
            </StackPanel>

            <!-- Фрейм для отображения контента -->
            <Frame x:Name="FrmMain" NavigationUIVisibility="Hidden" ContentRendered="FrmMain_ContentRendered"/>
        </Grid>
    </Grid>
</Window>