<Page x:Class="Shilenko_wpf1.Pages.Autho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shilenko_wpf1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auto" Background="White">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <TextBlock Text="Логин:"/>
            <TextBox x:Name="txtLogin"/>
            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="pswdPassword"/>
            <TextBlock Visibility="Hidden" 
                       x:Name="txtBlockCaptcha" 
                       Text="Капча:"/>
            <TextBox Visibility="Hidden" 
                     x:Name="txtboxCaptcha"/>
            <TextBlock HorizontalAlignment="Center" 
                       Visibility="Hidden" 
                       x:Name="txtBlockTimer"/>
            <StackPanel Orientation="Horizontal" 
                        Height="80" 
                        HorizontalAlignment="Center">
                <Button x:Name="btnEnterGuest" 
                        Margin="5,15,5,5" 
                        Content="Войти как гость" 
                        Click="btnEnterGuest_Click"/>
                <Button x:Name="btnEnter" 
                        Margin="5,15,5,5" 
                        Content="Войти" 
                        Click="btnEnter_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
