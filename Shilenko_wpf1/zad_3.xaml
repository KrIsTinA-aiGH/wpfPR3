<Window x:Class="Shilenko_wpf1.zad_3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shilenko_wpf1"
        mc:Ignorable="d"
        Title="zad_3" Height="450" Width="800">
    <Grid>
        <!-- Описание задания -->
        <TextBlock TextWrapping="Wrap" FontSize="20" Text="Дан целочисленный массив размера N. Преобразовать его, прибавив к четным числам последний элемент. Первый и последний элементы массива не изменять." 
                   Margin="20,35,19.333,0" VerticalAlignment="Top" Height="80"/>

        <!-- Ввод размера массива -->
        <TextBlock Text="Введите размер массива:" FontSize="18" 
                   Margin="20,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="InputBox" Margin="233,120,366.333,0" VerticalAlignment="Top" Height="25"/>

        <!-- Кнопка -->
        <Button x:Name="Otvet" Content="Посчитать" Height="30" Width="100"
                Click="Otvet_Click" Margin="0,160,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Оригинальный массив -->
        <TextBlock Text="Оригинальный массив:" FontSize="18" 
                   Margin="20,220,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="OriginalBox" IsReadOnly="True" Margin="20,250,400.333,0" VerticalAlignment="Top" Height="127"/>

        <!-- Результат -->
        <TextBlock Text="Результат:" FontSize="18" 
                   Margin="400,220,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="ResultBox" IsReadOnly="True" Margin="400,250,20.333,0" VerticalAlignment="Top" Height="127"/>

        <!-- Кнопка Назад -->
        <Button Content="Назад" Click="BackButton_Click" 
                Width="80" Height="30" Margin="10,10,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.537,-0.467"/>
    </Grid>
</Window>