<Window x:Class="Shilenko_wpf1.zad_4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shilenko_wpf1"
        mc:Ignorable="d"
        Title="zad_4" Height="450" Width="800">
    <Grid>
        <!-- Заголовок -->
        <TextBlock TextWrapping="Wrap" FontSize="20" Text="Поменять местами элементы на 3 и 5 позициях" 
                   Margin="20,20,20,0" VerticalAlignment="Top" HorizontalAlignment="Center" Height="40"/>

        <!-- Инструкция -->
        <TextBlock Text="Введите числа через пробел:" FontSize="18" 
                   Margin="20,80,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- Поле ввода -->
        <TextBox x:Name="InputBox" Margin="20,120,20,0" VerticalAlignment="Top" Height="25"/>

        <!-- Кнопка -->
        <Button x:Name="Otvet" Content="Поменять местами" Height="30" Width="150"
                Click="Otvet_Click" Margin="0,160,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <!-- Результат -->
        <TextBlock Text="Результат:" FontSize="18" 
                   Margin="20,210,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="ResultBox" IsReadOnly="True" Margin="20,240,20,80" VerticalAlignment="Top" Height="60"/>

        <!-- Кнопка Назад -->
        <Button Content="Назад" Click="BackButton_Click" 
                Width="80" Height="30" Margin="10,10,0,0"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>